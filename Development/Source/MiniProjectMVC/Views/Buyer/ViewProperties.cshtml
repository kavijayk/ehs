@model IEnumerable<MiniProjectMVC.Property>

@{
    ViewBag.Title = "ViewProperties";
}

<h2>Properties</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PropertyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PropertyType)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.Adress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceRange)
        </th>       
      <th></th>
        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PropertyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PropertyType)
        </td>       
        <td>
            @Html.DisplayFor(modelItem => item.Adress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceRange)
        </td>              
        <td>
            @Html.ActionLink("Add to Cart", "AddToCart", new { id=item.PropertyId })           
        </td>
    </tr>
}

</table>
